<% params[:alias] %>

<% @player = User.find_by(alias: params[:alias]) %>

<% if !@player.blank? %>
    <% @player.getname() %>
<% end %>



<div class="mb header">
  <img src="images/calendrier.jpg" alt="team" class="img-header">
  <img src="images/fiche_joueur/shadow_top.png" alt="" id="shadow_top">
  <img src="images/fiche_joueur/shadow_bot.png" alt="" id="shadow_bot">
  <div class="overlay-uni"></div>
  <div class="header-caption d-none d-md-block text-left">
    <em>
      <h1 class="title-header">
        <span style="font-size: 80px;"><%= @player.getname() %></span>
      </h1>
      <h2 class="subtitle-header">
        <% roles = ['gardien', 'défenseur', 'milieu', 'attaquant'] %>
        <% if !@player.role.blank? %>
            <%= roles[@player.role-1] %>
        <% end %>
      </h2>
    </em>
  </div>
</div>
<div class="container-fluid mb">
  <div class="row">
    <div class="col-12 col-xl-9 col-lg-9 col-md-12 col-sm-12">
      <div class="row">
        <div class="col-12 col-xl-4 col-lg-4 col-md-4 col-sm-12">
          <div class="row row-infos-joueur">
            <div class="col-12 " align="center">
              <div class="joueur grad">
                <img src="<%= @player.avatar %>" alt="<%= @player.surname %>" class="img-player">
                <p class="text-player">
                  <%= @player.getname() %>
                </p>
                <p class="text-player text-s">
                  <% roles = ['Gardien', 'Défenseur', 'Milieu', 'Attaquant'] %>
                  <% if !@player.role.blank? %>
                      <%= roles[@player.role-1] %>
                  <% end %>
                </p>
              </div>
            </div>
            <div class="col-12">
              <div class="infos">
                <h3 class="titre sous-titre text-grenat">date de naissance</h3>
                <p class="info"><%= Time.at(@player.birthday.to_time.to_i).strftime '%d.%m.%y' %></p>
                <h3 class="titre sous-titre text-grenat">nationalité</h3>
                <p class="info"><%= @player.nationality %></p>
                <h3 class="titre sous-titre text-grenat">Équipe</h3>
                <p class="info">1ère équipe</p>
                <h3 class="titre sous-titre text-grenat">Lorem Ipsum</h3>
                <p class="info">Lorem Ipsum</p>
              </div>
            </div>
          </div>
        </div>
        <div class="col-12 col-xl-8 col-lg-8 col-md-8 col-sm-12">
          <div class="row">
            <div class="col-12">
              <h3 class="titre text-grenat text-l">Statistiques</h3>
              <table class="table table-striped table-joueur">
                <thead class="head">
                <tr>
                  <td>saison</td>
                  <td>mj</td>
                  <td>tit</td>
                  <td>min</td>
                  <td>cj</td>
                  <td>cr</td>
                  <td>buts</td>
                  <td>ass.</td>
                </tr>
                <thead>
                <tbody>
                <tr>
                  <td>2017-2018</td>
                  <td>
                    <%= @player.gettotalmatches() %>
                  </td>
                  <td><%= @player.gettotaltits() %></td>
                  <td><%= @player.gettotaltime() %></td>
                  <td><%= @player.gettotalcj() %></td>
                  <td><%= @player.gettotalcr() %></td>
                  <td><%= @player.gettotalbuts() %></td>
                  <td><%= @player.gettotalassists() %></td>
                </tr>

                <tfoot>
              </table>
            </div>
            <div class="col-12 col-sm-6">
              <h3 class="titre text-grenat text-l">Parcours professionel</h3>
              <p class="parcours"><%= raw @player.getbrs(@player.sportactivity_archive) %>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-xl-3 col-lg-3 nodisplaymobile">
      {module Widget: Abonnements}
      <div class="widgets">
        <a class="twitter-timeline" data-width="100%" data-height="500" data-theme="light" href="https://twitter.com/ServetteFC">Tweets
          by ServetteFC</a>
        <script async src="//platform.twitter.com/widgets.js" charset="utf-8"></script>
      </div>
    </div>
  </div>
</div>