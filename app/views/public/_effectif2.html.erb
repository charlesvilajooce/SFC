<div class="row">

  <div class="col-12 col-xl-8 col-lg-8 col-md-12 col-sm-12 mb">
    <h3 class="titre text-grenat">Effectif</h3>
    <table class="table table-striped table-hover">
      <tbody class="effectif">
      <%
        @users = User.order(:name)
        @users1 = @users.select { |u| u.canrole == params[:alias]  && u.role == 1}
        @users2 = @users.select { |u| u.canrole ==  params[:alias]  && u.role == 2}
        @users3 = @users.select { |u| u.canrole ==  params[:alias]  && u.role == 3}
        @users4 = @users.select { |u| u.canrole ==  params[:alias]  && u.role == 4}
        players = @users1 +@users2 + @users3 + @users4
        players.each do |player|
      %>
          <tr>
            <td>#<%= player.level %></td>
            <%
              if !player.alias.blank?
                @tempalias = player.alias
              else
                @tempalias = player.surname+'-'+player.name
              end
            %>
            <td><a href="index.php/<%= @tempalias %>" class="link_grenat"><%= player.getname() %></a></td>
            <td>
              <% roles = ['Gardien', 'DÃ©fenseur', 'Milieu', 'Attaquant'] %>
              <% if !player.role.blank? %>
                  <%= roles[player.role-1] %>
              <% end %></td>
            <td>
              <% if !player.birthday.blank? %>
                  <%= Time.at(player.birthday.to_time.to_i).strftime '%d.%m.%Y' %>
              <% end %>
            </td>
            <td><%= player.nationality %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>