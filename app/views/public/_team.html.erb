      <%
        @users = User.order(:name)
        @users1 = @users.select { |u| u.canrole == 'premiere'  && u.role == 1}
        @users2 = @users.select { |u| u.canrole == 'premiere'  && u.role == 2}
        @users3 = @users.select { |u| u.canrole == 'premiere'  && u.role == 3}
        @users4 = @users.select { |u| u.canrole == 'premiere'  && u.role == 4}
        @users = @users1 +@users2 + @users3 + @users4


      %>
      <% @users.each do |user| %>

          <%
            if !user.alias.blank?
              @tempalias = user.alias
            else
              @tempalias = user.surname+'-'+user.name
            end
          %>

          <div class="col-12 col-xl-3 col-lg-3 col-md-12 col-sm-12" align="center">
            <a href="index.php/<%= @tempalias.downcase %>"><img src="<%= user.avatar %>" alt="<%= user.getname() %>" class="player">
           <p class="text-player">#<%= user.level %> <%= user.getname() %></p></a>
            <% roles = ['Gardien', 'Défenseur', 'Milieu', 'Attaquant'] %>
            <% if !user.role.blank? %>
                <p class="text-player text-s"><%= roles[user.role-1] %></p>
            <% end %>
          </div>

      <% end %>



