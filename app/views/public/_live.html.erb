              %>
                  <% if match.home %>
                      <%
                        @matchevent1users.each do |me|
                          if me.temps == i && me.thetype == "Carton Rouge"
                      %>
                              <%= i %> <%= raw me.user.getname() %><br/>
                          <% end end %>
                  <% else %>
                      <%
                        @matchevents.each do |me|
                          if me.temps == i && me.thetype == "Carton Rouge Adversaire"
                      %>
                              <%= i %> <%= raw me.player %><br/>
                          <% end end %>
                  <% end %>

              <% end %>

              <br>

              <strong>Changements
