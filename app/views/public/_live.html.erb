              %>
                  <% if match.home %>
                      <%
                        @matchevent2users.each do |me|
                          if me.temps == i && me.thetype == "Echange"
                      %>
                              <%= i %> <%= raw me.user_one.getname() %> pour <%= raw me.user_two.getname() %><br/>
                          <% end end %>
                  <% else %>
                      <%
                        @matchevents.each do |me|
                          if me.temps == i && me.thetype == "Echange Adversaire"
                      %>
                              <%= i %> <%= raw me.player %><br/>
                          <% end end %>
                  <% end %>

              <% end %>
