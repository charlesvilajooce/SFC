                  <% end %>

              <% end %>

              <br>

              <strong>Expulsions
                <img src="https://www.servette.biz/images/livescore/red-card.png" style="max-height: 15px;"></strong><br/>
              <%
                for i in 0..200 do
              %>
                  <% if !match.home %>
                      <%
                        @matchevent1users.each do |me|
                          if me.temps == i && me.thetype == "Carton Rouge"
                      %>
                              <%= i %> <%= raw me.user.getname() %><br/>
