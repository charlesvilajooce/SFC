<%
  livegame = false
  display = false
  match = Match.new

  matches = Match.all
  matches.each do |m|
    if m.live
      livegame = true
      match = m
      display = true
    end
  end

  if !livegame
    matches = Match.all.select { |u| u.when+180*60 > Time.now.to_i }
    matches = matches.sort_by &:when

    if !matches.empty?
      match = matches[0]
      display = true
    end

  end


%>

<% if display %>
