            <div class="col-6">
              <table class="table table-striped" style="text-align: left;">

                <%

                  for i in 0..200 do
                %>

                    <%
                      @matchevents.each do |me|
                        if me.temps == i
                    %>
                            <tr>
                              <td>
                                <%= i %>
                                <% if !me.getimg().blank? %>
                                    <%= raw me.getimg() %>
                                <% end %>
                              </td>
                              <td>
                                <%= raw me.gettext() %>
                              </td>
                            </tr>
                        <% end end %>
                    <%
                      @matchevent1users.each do |me|
                        if me.temps == i
                    %>
                            <tr>
                              <td>
                                <%= i %>
                                <% if !me.getimg().blank? %>
                                    <%= raw me.getimg() %>
                                <% end %>

                              </td>
                              <td>
                                <%= raw me.gettext() %>
                              </td>
                            </tr>
                        <% end end %>
                    <%
                      @matchevent2users.each do |me|
                        if me.temps == i
                    %>
                            <tr>
                              <td>
                                <%= i %>
                                <% if !me.getimg().blank? %>
                                    <%= raw me.getimg() %>
                                <% end %>
                              </td>
                              <td>
                                <%= raw me.gettext() %>
                              </td>
                            </tr>
                        <% end end %>
                <% end %>
              </table>
            </div>
            <div class="col-3">

              <strong>Buts
                <img src="https://www.servette.biz/images/livescore/goal.png" style="max-height: 15px;"></strong><br/>
              <%
                for i in 0..200 do
              %>
                  <% if !match.home %>
                      <%
                        @matchevent1users.each do |me|
                          if me.temps == i && me.thetype == "But"
                      %>
                              <%= i %> <%= raw me.user.getname() %><br/>
                          <% end end %>
                      <%
                        @matchevent2users.each do |me|
                          if me.temps == i && me.thetype == "But"
                      %>
                              <%= i %> <%= raw me.user_one.getname() %><br/>
                          <% end end %>
                  <% else %>
                      <%
                        @matchevents.each do |me|
                          if me.temps == i && me.thetype == "But Adversaire"
                      %>
                              <%= i %> <%= raw me.player %><br/>
