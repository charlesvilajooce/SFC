<%
  active1 = '';
  active2 = '';
  active3 = '';
  if(@user.status == 0)
    active1 = 'status-active'
  elsif @user.status == 1
    active2 = 'status-active'
  else
    active3 = 'status-active'
  end

%>
<%
if (current_user.isadmin())

%>

    <%= link_to '<i class="fa fa-check-square status-green" aria-hidden="true"></i>'.html_safe, users_change_status_path(@user.id,2,@wheretoredirect), class: 'btn btn-user status-btn status-green '+active3 %>
    <%= link_to '<i class="fa fa-external-link-square status-yellow" aria-hidden="true"></i>'.html_safe, users_change_status_path(@user.id,1,@wheretoredirect), class: 'btn btn-user status-btn status-yellow '+active2 %>
    <%= link_to '<i class="fa fa-h-square status-red" aria-hidden="true"></i>'.html_safe, users_change_status_path(@user.id,0,@wheretoredirect), class: 'btn btn-user status-btn status-red '+active1 %>

<% else
     %>

    <span class="status-btn status-green <%= active3 %>"></span>
    <span class="status-btn status-yellow <%= active2 %>"></span>
    <span class="status-btn status-red <%= active1 %>"></span>


<% end %>
